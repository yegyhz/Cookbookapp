# Example environment variables for local development
# Server-side
GEMINI_API_KEY=

# Vite (client) envs (must be prefixed with VITE_)
VITE_API_BASE_URL=http://localhost:3001/api
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Optional: override server port
PORT=3001
# Path to server-side Firebase service account JSON (not committed). Defaults to `server/serviceAccountKey.json`.
SERVICE_ACCOUNT_PATH=server/serviceAccountKey.json
# Optional: override Firebase DB URL used by admin SDK
FIREBASE_DATABASE_URL=https://familycookbook-725b5.firebaseio.com
